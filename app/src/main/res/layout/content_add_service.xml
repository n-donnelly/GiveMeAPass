<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddServiceDialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#202020"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Service"
        android:id="@+id/service_title"
        android:textColor="#fff"
        android:textStyle="bold"
        android:height="48dp"
        android:textSize="36dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/service_label"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_below="@+id/service_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/service_text"
        android:layout_below="@+id/service_label"
        android:layout_centerHorizontal="true"
        android:editable="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number of Characters"
        android:id="@+id/num_chars_label"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/service_text" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num_char_field"
        android:layout_below="@+id/num_chars_label"
        android:width="36dp"
        android:layout_alignRight="@+id/service_text"
        android:layout_alignEnd="@+id/service_text"
        android:layout_alignLeft="@+id/service_text"
        android:layout_alignStart="@+id/service_text"
        android:textAlignment="center"
        android:gravity="center"
        android:spinnerMode="dropdown" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Special Characters"
        android:id="@+id/incl_spec_check"
        android:textStyle="bold"
        android:layout_below="@+id/num_char_field"
        android:layout_alignLeft="@+id/incl_nums_check"
        android:layout_alignStart="@+id/incl_nums_check"
        android:layout_marginTop="46dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include Numbers"
        android:id="@+id/incl_nums_check"
        android:layout_below="@+id/incl_spec_check"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

</RelativeLayout>
