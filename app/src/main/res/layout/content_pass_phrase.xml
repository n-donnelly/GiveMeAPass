<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_pass_phrase"
    tools:context="dev.donnelly.neil.givemeapass.PassPhraseActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPassPhrase"
        android:width="240dp"
        android:singleLine="true"
        android:hint="Passphrase"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_marginTop="132dp"
        android:height="48dp"
        android:padding="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/phrase_sub_btn"
        android:height="48dp"
        android:elegantTextHeight="false"
        android:padding="15dp"
        android:onClick="onPassSubmit"
        android:textStyle="bold"
        android:layout_below="@+id/editPassPhrase"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please Enter a Passphrase"
        android:id="@+id/pass_phrase_label"
        android:layout_alignBottom="@+id/editPassPhrase"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:textColor="#000" />

</RelativeLayout>
